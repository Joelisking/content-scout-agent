# ============================================
# Content Scout - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# ============================================
# REQUIRED: Core Configuration
# ============================================

# Database - PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# For Docker: postgresql://postgres:postgres@db:5432/contentscout
# For local: postgresql://postgres:postgres@localhost:5432/contentscout
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/contentscout

# Redis - For Celery background tasks
# Format: redis://host:port/db
# For Docker: redis://redis:6379/0
# For local: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# Security - JWT secret key (generate a random string)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-to-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ============================================
# REQUIRED: API Keys
# ============================================

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/
# Sign up: https://console.anthropic.com/ (Free tier available)
# Format: sk-ant-api03-...
ANTHROPIC_API_KEY=sk-ant-your-claude-api-key-here

# Resend API Key (Email Service)
# Get from: https://resend.com/api-keys
# Sign up: https://resend.com (Free tier: 3,000 emails/month)
# Format: re_xxxxxxxxxxxxx
RESEND_API_KEY=re_your_resend_api_key_here

# Email Configuration
# For development: Use Resend's test domain (onboarding@resend.dev)
# For production: Verify your domain in Resend dashboard first
FROM_EMAIL=onboarding@resend.dev
ADMIN_EMAIL=admin@yourdomain.com

# Stripe API Keys (Payment Processing - US/Global)
# Get from: https://dashboard.stripe.com/apikeys
# Sign up: https://stripe.com
# Use test keys for development: sk_test_... and pk_test_...
# Use live keys for production: sk_live_... and pk_live_...
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_optional

# Paystack API Keys (Payment Processing - Africa)
# Get from: https://dashboard.paystack.com/#/settings/developer
# Sign up: https://paystack.com
# Use test keys for development: sk_test_... and pk_test_...
# Use live keys for production: sk_live_... and pk_live_...
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# ============================================
# OPTIONAL: Application Settings
# ============================================

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# Environment (development, staging, production)
ENVIRONMENT=development

# Storage path for blog files
STORAGE_PATH=/tmp/content-scout-blogs

# ============================================
# OPTIONAL: AWS S3 Storage (if USE_S3=true)
# ============================================

# Set to true to use S3 instead of local storage
USE_S3=false

# AWS Credentials (only needed if USE_S3=true)
# Get from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

